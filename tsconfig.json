{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src",
    "server.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "swc": true
  }
}
